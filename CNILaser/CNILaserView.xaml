<UserControl
    x:Class="CNILaser.CNILaserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CNILaser"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:CNILaserViewModel}"
    d:DesignWidth="500"
    mc:Ignorable="d">

    <StackPanel>
        <GroupBox
            Margin="10,10,10,0"
            HorizontalContentAlignment="Center"
            Style="{DynamicResource GroupBoxTab}">

            <GroupBox.Header>
                <TextBlock
                    FontSize="12"
                    FontWeight="Bold"
                    Text="激光设置-四通道" />
            </GroupBox.Header>

            <StackPanel>
                <StackPanel Margin="5" IsEnabled="{Binding IsConnected}">
                    <TextBlock
                        Margin="10,0,0,5"
                        HorizontalAlignment="Left"
                        FontSize="12"
                        FontWeight="Bold"
                        Text="{Binding ChannelThreeChannel1Name}" />
                    <Grid Margin="5,0,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition Width="35" />
                        </Grid.ColumnDefinitions>

                        <Viewbox Grid.Column="0">
                            <Slider
                                Width="300"
                                MinWidth="0"
                                VerticalAlignment="Center"
                                IsSnapToTickEnabled="True"
                                Maximum="100"
                                TickFrequency="1"
                                Value="{Binding ChannelThreeChannel1Value, Delay=200}">
                                <Slider.Resources>
                                    <LinearGradientBrush x:Key="PrimaryBrush" StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Offset="0" Color="#53aea0" />
                                        <GradientStop Offset="1" Color="#a3d9cb" />
                                    </LinearGradientBrush>
                                </Slider.Resources>
                            </Slider>
                        </Viewbox>

                        <DockPanel
                            Grid.Column="1"
                            Margin="12,0,0,0"
                            LastChildFill="False">
                            <TextBox
                                Width="45"
                                HorizontalAlignment="Stretch"
                                KeyDown="TextBox_KeyDown"
                                Text="{Binding ChannelThreeChannel1Value, StringFormat={}{0:F0}, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                ToolTip="Enter确认输入" />
                            <Button
                                Width="25"
                                Command="{Binding IncreaseChannelThreeChannel1Command}"
                                Content="↑"
                                IsEnabled="{Binding IsButtonEnabled}" />
                            <Button
                                Width="25"
                                Margin="0"
                                Command="{Binding DecreaseChannelThreeChannel1Command}"
                                Content="↓"
                                IsEnabled="{Binding IsButtonEnabled}" />
                        </DockPanel>

                        <ToggleButton
                            Grid.Column="2"
                            Background="DarkGray"
                            Command="{Binding SetChannelFirstStatusCommand}"
                            IsChecked="{Binding ChannelThreeChannel1Enable, Mode=TwoWay}"
                            Style="{DynamicResource ToggleButtonSwitch}" />

                        <TextBlock
                            Grid.Column="3"
                            Margin="5"
                            FontWeight="Bold"
                            Text="{Binding ChannelThreeChannel1ActualValue}" />

                    </Grid>
                </StackPanel>

                <StackPanel Margin="5" IsEnabled="{Binding IsConnected}">
                    <TextBlock
                        Margin="10,0,0,5"
                        HorizontalAlignment="Left"
                        FontSize="12"
                        FontWeight="Bold"
                        Text="{Binding ChannelThreeChannel2Name}" />
                    <Grid Margin="5,0,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition Width="35" />
                        </Grid.ColumnDefinitions>

                        <Viewbox Grid.Column="0">
                            <Slider
                                Width="300"
                                MinWidth="0"
                                VerticalAlignment="Center"
                                IsSnapToTickEnabled="True"
                                Maximum="100"
                                TickFrequency="1"
                                Value="{Binding ChannelThreeChannel2Value, Delay=200}">
                                <Slider.Resources>
                                    <LinearGradientBrush x:Key="PrimaryBrush" StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Offset="0" Color="#479546" />
                                        <GradientStop Offset="1" Color="#92d66a" />
                                    </LinearGradientBrush>
                                </Slider.Resources>
                            </Slider>
                        </Viewbox>

                        <DockPanel
                            Grid.Column="1"
                            Margin="12,0,0,0"
                            LastChildFill="False">
                            <TextBox
                                Width="45"
                                HorizontalAlignment="Stretch"
                                KeyDown="TextBox_KeyDown"
                                Text="{Binding ChannelThreeChannel2Value, StringFormat={}{0:F0}, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                ToolTip="Enter确认输入" />
                            <Button
                                Width="25"
                                Command="{Binding IncreaseChannelThreeChannel2Command}"
                                Content="↑"
                                IsEnabled="{Binding IsButtonEnabled}" />

                            <Button
                                Width="25"
                                Command="{Binding DecreaseChannelThreeChannel2Command}"
                                Content="↓"
                                IsEnabled="{Binding IsButtonEnabled}" />
                        </DockPanel>

                        <ToggleButton
                            Grid.Column="2"
                            Background="DarkGray"
                            Command="{Binding SetChannelSecondStatusCommand}"
                            IsChecked="{Binding ChannelThreeChannel2Enable, Mode=TwoWay}"
                            Style="{DynamicResource ToggleButtonSwitch}" />

                        <TextBlock
                            Grid.Column="3"
                            Margin="5"
                            FontWeight="Bold"
                            Text="{Binding ChannelThreeChannel2ActualValue}" />

                    </Grid>
                </StackPanel>

                <StackPanel Margin="5" IsEnabled="{Binding IsConnected}">
                    <TextBlock
                        Margin="10,0,0,5"
                        HorizontalAlignment="Left"
                        FontSize="12"
                        FontWeight="Bold"
                        Text="{Binding ChannelThreeChannel3Name}" />
                    <Grid Margin="5,0,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition Width="35" />
                        </Grid.ColumnDefinitions>

                        <Viewbox Grid.Column="0">
                            <Slider
                                Width="300"
                                MinWidth="0"
                                VerticalAlignment="Center"
                                IsSnapToTickEnabled="True"
                                Maximum="100"
                                TickFrequency="1"
                                Value="{Binding ChannelThreeChannel3Value, Delay=200}">
                                <Slider.Resources>
                                    <LinearGradientBrush x:Key="PrimaryBrush" StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Offset="0" Color="#a4251c" />
                                        <GradientStop Offset="1" Color="#c9716e" />
                                    </LinearGradientBrush>
                                </Slider.Resources>
                            </Slider>
                        </Viewbox>

                        <DockPanel
                            Grid.Column="1"
                            Margin="12,0,0,0"
                            LastChildFill="False">
                            <TextBox
                                Width="45"
                                HorizontalAlignment="Stretch"
                                KeyDown="TextBox_KeyDown"
                                Text="{Binding ChannelThreeChannel3Value, StringFormat={}{0:F0}, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                ToolTip="Enter确认输入" />
                            <Button
                                Width="25"
                                Command="{Binding IncreaseChannelThreeChannel3Command}"
                                Content="↑"
                                IsEnabled="{Binding IsButtonEnabled}" />
                            <Button
                                Width="25"
                                Command="{Binding DecreaseChannelThreeChannel3Command}"
                                Content="↓"
                                IsEnabled="{Binding IsButtonEnabled}" />
                        </DockPanel>

                        <ToggleButton
                            Grid.Column="2"
                            Background="DarkGray"
                            Command="{Binding SetChannelThirdStatusCommand}"
                            IsChecked="{Binding ChannelThreeChannel3Enable, Mode=TwoWay}"
                            Style="{DynamicResource ToggleButtonSwitch}" />

                        <TextBlock
                            Grid.Column="3"
                            Margin="5"
                            FontWeight="Bold"
                            Text="{Binding ChannelThreeChannel3ActualValue}" />

                    </Grid>
                </StackPanel>

                <StackPanel Margin="5" IsEnabled="{Binding IsConnected}">
                    <TextBlock
                        Margin="10,0,0,5"
                        HorizontalAlignment="Left"
                        FontSize="12"
                        FontWeight="Bold"
                        Text="{Binding ChannelThreeChannel4Name}" />
                    <Grid Margin="5,0,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition Width="35" />
                        </Grid.ColumnDefinitions>

                        <Viewbox Grid.Column="0">
                            <Slider
                                Width="300"
                                MinWidth="0"
                                VerticalAlignment="Center"
                                IsSnapToTickEnabled="True"
                                Maximum="100"
                                TickFrequency="1"
                                Value="{Binding ChannelThreeChannel4Value, Delay=200}">
                                <Slider.Resources>
                                    <LinearGradientBrush x:Key="PrimaryBrush" StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Offset="0" Color="#872083" />
                                        <GradientStop Offset="1" Color="#876b86" />
                                    </LinearGradientBrush>
                                </Slider.Resources>
                            </Slider>
                        </Viewbox>

                        <DockPanel
                            Grid.Column="1"
                            Margin="12,0,0,0"
                            LastChildFill="False">
                            <TextBox
                                Width="45"
                                HorizontalAlignment="Stretch"
                                KeyDown="TextBox_KeyDown"
                                Text="{Binding ChannelThreeChannel4Value, StringFormat={}{0:F0}, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                ToolTip="Enter确认输入" />
                            <Button
                                Width="25"
                                Command="{Binding IncreaseChannelThreeChannel4Command}"
                                Content="↑"
                                IsEnabled="{Binding IsButtonEnabled}" />
                            <Button
                                Width="25"
                                Command="{Binding DecreaseChannelThreeChannel4Command}"
                                Content="↓"
                                IsEnabled="{Binding IsButtonEnabled}" />
                        </DockPanel>

                        <ToggleButton
                            Grid.Column="2"
                            Background="DarkGray"
                            Command="{Binding SetChannelFourthStatusCommand}"
                            IsChecked="{Binding ChannelThreeChannel4Enable, Mode=TwoWay}"
                            Style="{DynamicResource ToggleButtonSwitch}" />

                        <TextBlock
                            Grid.Column="3"
                            Margin="5"
                            FontWeight="Bold"
                            Text="{Binding ChannelThreeChannel4ActualValue}" />

                    </Grid>
                </StackPanel>

            </StackPanel>
        </GroupBox>

        <UniformGrid Margin="10,5" Columns="4">
            <ComboBox
                x:Name="ModeComboBox"
                DockPanel.Dock="Left"
                IsEnabled="{Binding IsConnected}"
                ItemsSource="{Binding ControlMode}"
                SelectedIndex="{Binding ControlModeIndex, Mode=TwoWay}" />
            <ComboBox
                x:Name="ComComboBox"
                DockPanel.Dock="Left"
                IsEnabled="{Binding IsOperable}"
                ItemsSource="{Binding SerialComs}"
                SelectedIndex="{Binding SerialIndex, Mode=TwoWay}" />
            <Button
                HorizontalAlignment="Stretch"
                Command="{Binding InitManualCommand}"
                Content="手动连接"
                IsEnabled="{Binding IsOperable}" />
            <Button
                HorizontalAlignment="Stretch"
                Command="{Binding InitCommand}"
                Content="自动连接"
                IsEnabled="{Binding IsOperable}" />
        </UniformGrid>
    </StackPanel>

</UserControl>
