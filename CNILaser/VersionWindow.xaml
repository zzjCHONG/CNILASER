<liftui:Window
    x:Class="Simscop.Spindisk.Wpf.Views.VersionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:liftui="https://github.com/pchuan98/Lift.UI"
    xmlns:local="clr-namespace:Simscop.Spindisk.Wpf.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="380"
    Height="240"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <liftui:Window.NonClientAreaContent>
        <StackPanel Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="Bold"
                Foreground="#509CFF"
                Text="Software Information" />
        </StackPanel>
    </liftui:Window.NonClientAreaContent>

    <Border
        BorderBrush="#33000000"
        BorderThickness="1"
        SnapsToDevicePixels="True">

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Ellipse
                    Width="40"
                    Height="40"
                    Fill="#509CFF">
                    <Ellipse.Effect>
                        <DropShadowEffect
                            BlurRadius="10"
                            Opacity="0.4"
                            ShadowDepth="2" />
                    </Ellipse.Effect>
                </Ellipse>
                <TextBlock
                    Name="SoftwareName"
                    Margin="12,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="Multi-Channel Laser" />
            </StackPanel>

            <TextBlock
                x:Name="VersionText"
                Margin="0,5"
                FontSize="14"
                Text="Version: v1.0.0.0"
                TextAlignment="Center" />
            <TextBlock
                Margin="0,5"
                FontSize="14"
                Text="Developer: Simscop"
                TextAlignment="Center" />
            <TextBlock
                x:Name="CompanyText"
                Margin="0,5"
                FontSize="14"
                Text="Simscop Instrument (Guangzhou) Co., Ltd"
                TextAlignment="Center" />
            <TextBlock
                Margin="0,10,0,0"
                FontSize="13"
                Text="Copyright © 2025-2026 Simscop"
                TextAlignment="Center" />
        </StackPanel>
    </Border>
</liftui:Window>