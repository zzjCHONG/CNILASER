<UserControl
    x:Class="CNILaser.ParamView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CNILaser"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:CNILaserViewModel}"
    d:Width="500"
    mc:Ignorable="d">

    <!--  激光器参数 GroupBox  -->
    <GroupBox
        Grid.Row="0"
        Margin="10"
        FontSize="12"
        FontWeight="Bold"
        Header="Laser State"
        Style="{DynamicResource GroupBoxTab}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  激光器数据表格  -->
            <Grid Grid.Row="0" Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  表头  -->
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="5"
                    FontWeight="Bold"
                    Text="" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="{Binding LaserChannel1Name}" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="{Binding LaserChannel2Name}" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="3"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="{Binding LaserChannel3Name}" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="4"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="{Binding LaserChannel4Name}" />

                <!--  电流行  -->
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="5"
                    FontWeight="SemiBold"
                    Text="Current (mA)" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Text="{Binding LaserChannel1Electricity}" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Text="{Binding LaserChannel2Electricity}" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="3"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Foreground="Gray"
                    Text="N.A." />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="4"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Text="{Binding LaserChannel4Electricity}" />

                <!--  温度行  -->
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="5"
                    FontWeight="SemiBold"
                    Text="Temp (℃)" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Text="{Binding LaserChannel1Temperature}" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="2"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Text="{Binding LaserChannel2Temperature}" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="3"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Foreground="Gray"
                    Text="N.A." />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="4"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Text="{Binding LaserChannel4Temperature}" />

                <!--  状态行  -->

                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="5"
                    FontWeight="SemiBold"
                    Text="ON-OFF State" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="{Binding LaserChannel1State}" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="2"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="{Binding LaserChannel2State}" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="3"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="{Binding LaserChannel3State}" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="4"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="{Binding LaserChannel4State}" />

            </Grid>

            <!--  系统状态  -->

            <!--  系统状态  -->
            <Grid Grid.Row="1" Margin="2,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.8*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.8*" />
                    <ColumnDefinition Width="1.2*" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="0"
                    Margin="5,0"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="Key: " />
                    <TextBlock
                        Margin="3,0,0,0"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Text="{Binding LaserKeyState}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding LaserKeyState}" Value="OFF">
                                        <Setter Property="Foreground" Value="Red" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding LaserKeyState}" Value="N.A.">
                                        <Setter Property="Foreground" Value="Gray" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    Margin="5,0"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="Interlock: " />
                    <TextBlock
                        Margin="3,0,0,0"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Text="{Binding LaserInterlockState}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding LaserInterlockState}" Value="Error">
                                        <Setter Property="Foreground" Value="Red" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding LaserInterlockState}" Value="N.A.">
                                        <Setter Property="Foreground" Value="Gray" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <StackPanel
                    Grid.Column="2"
                    Margin="5,0"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="Estop: " />
                    <TextBlock
                        Margin="3,0,0,0"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Text="{Binding LaserEstopState}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding LaserEstopState}" Value="Error">
                                        <Setter Property="Foreground" Value="Red" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding LaserEstopState}" Value="N.A.">
                                        <Setter Property="Foreground" Value="Gray" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <StackPanel
                    Grid.Column="3"
                    Margin="5,0"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="Preheat: " />
                    <TextBlock
                        Margin="3,0,0,0"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Text="{Binding LaserPreheatState}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding LaserPreheatState}" Value="Preheating">
                                        <Setter Property="Foreground" Value="Orange" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding LaserPreheatState}" Value="SystemError">
                                        <Setter Property="Foreground" Value="Red" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding LaserPreheatState}" Value="Unknown">
                                        <Setter Property="Foreground" Value="Red" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding LaserPreheatState}" Value="Finished">
                                        <Setter Property="Foreground" Value="White" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding LaserPreheatState}" Value="N.A.">
                                        <Setter Property="Foreground" Value="Gray" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Grid>

        </Grid>

    </GroupBox>

</UserControl>
