<UserControl
    x:Class="CNILaser.ParamView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CNILaser"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:CNILaserViewModel}"
    d:Width="500"
    mc:Ignorable="d">

    <!--  激光器参数 GroupBox  -->
    <GroupBox
        Grid.Row="0"
        Margin="10"
        FontSize="12"
        FontWeight="Bold"
        Header="Laser State"
        Style="{DynamicResource GroupBoxTab}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  激光器数据表格  -->
            <Grid Grid.Row="0" Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  表头  -->
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="5"
                    FontWeight="Bold"
                    Text="" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="{Binding LaserChannel1Name}" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="{Binding LaserChannel2Name}" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="3"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="{Binding LaserChannel3Name}" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="4"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="{Binding LaserChannel4Name}" />

                <!--  电流行  -->
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="5"
                    FontWeight="SemiBold"
                    Text="Current (mA)" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Text="{Binding LaserChannel1Electricity}" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Text="{Binding LaserChannel2Electricity}" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="3"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Foreground="Gray"
                    Text="{Binding LaserChannel3Temperature}" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="4"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Text="{Binding LaserChannel4Electricity}" />

                <!--  温度行  -->
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="5"
                    FontWeight="SemiBold"
                    Text="Temp (℃)" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Text="{Binding LaserChannel1Temperature}" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="2"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Text="{Binding LaserChannel2Temperature}" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="3"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Foreground="Gray"
                    Text="{Binding LaserChannel3Temperature}" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="4"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Text="{Binding LaserChannel4Temperature}" />

                <!--  状态行  -->

                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="5"
                    FontWeight="SemiBold"
                    Text="ON-OFF State" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="{Binding LaserChannel1State}" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="2"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="{Binding LaserChannel2State}" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="3"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="{Binding LaserChannel3State}" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="4"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="{Binding LaserChannel4State}" />

            </Grid>

            <!--  系统状态  -->

            <UniformGrid
                Grid.Row="1"
                Margin="0,5"
                Columns="4">

                <StackPanel Margin="2,0" Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="Key: " />
                    <TextBlock
                        Margin="3,0,0,0"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Text="{Binding LaserKeyState}" />
                </StackPanel>

                <StackPanel Margin="2,0" Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="Interlock: " />
                    <TextBlock
                        Margin="3,0,0,0"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Text="{Binding LaserInterlockState}" />
                </StackPanel>

                <StackPanel Margin="2,0" Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="Estop: " />
                    <TextBlock
                        Margin="3,0,0,0"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Text="{Binding LaserEstopState}" />
                </StackPanel>

                <StackPanel Margin="2,0" Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="Preheat: " />
                    <TextBlock
                        Margin="3,0,0,0"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Text="{Binding LaserPreheatState}" />
                </StackPanel>
            </UniformGrid>

        </Grid>

    </GroupBox>

</UserControl>
